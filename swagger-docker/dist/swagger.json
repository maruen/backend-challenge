{
  "swagger" : "2.0",
  "info" : {
    "description" : "ACME project is a MVP project",
    "version" : "v1",
    "title" : "ACME Rest Documentation",
    "termsOfService" : "http://invillia.com/terms",
    "contact" : {
      "name" : "Support",
      "url" : "http://invillia.com.br",
