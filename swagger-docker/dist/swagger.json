      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host" : "localhost:8080",
  "basePath" : "/",
  "tags" : [ {
    "name" : "Order Services"
  }, {
    "name" : "Payment Services"
  }, {
    "name" : "Store Services"
  } ],
  "schemes" : [ "http" ],
  "paths" : {
    "/api/order/getById/{order-id}" : {
      "get" : {
        "tags" : [ "Order Services" ],
        "summary" : "",
        "description" : "Get order by id",
        "operationId" : "getOrderById",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "order-id",
          "in" : "path",
          "description" : "The order Id",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "200" : {
            "description" : "Returns the order",
            "schema" : {
              "$ref" : "#/definitions/OrderOutputDTO"
            }
          },
          "404" : {
            "description" : "The order id was not found"
          }
        }
      }
    },
    "/api/payment" : {
      "post" : {
        "tags" : [ "Payment Services" ],
        "summary" : "",
        "description" : "Save payment",
        "operationId" : "savePayment",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/PaymentInputDTO"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "$ref" : "#/definitions/DefaultOutputDTO"
            }
          },
          "201" : {
            "description" : "Payment successfully saved",
            "schema" : {
              "$ref" : "#/definitions/DefaultOutputDTO"
            }
          }
        }
      }
    },
    "/api/store" : {
      "get" : {
        "tags" : [ "Store Services" ],
        "summary" : "",
        "description" : "Returns all stores",
        "operationId" : "getStores",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "Successfully retrieved stores",
            "schema" : {
              "type" : "array",
              "items" : {
                "type" : "object"
              }
            }
          }
        }
      },
      "post" : {
        "tags" : [ "Store Services" ],
        "summary" : "",
        "description" : "Save store",
        "operationId" : "saveStore",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "in" : "body",
          "name" : "body",
          "required" : false,
          "schema" : {
            "$ref" : "#/definitions/StoreDTO"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "schema" : {
              "$ref" : "#/definitions/Store"
            }
          },
          "201" : {
            "description" : "Store successfully saved",
            "schema" : {
              "$ref" : "#/definitions/Store"
            }
          },
          "403" : {
            "description" : "Store already saved",
            "schema" : {
              "$ref" : "#/definitions/ErrorDTO"
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "DefaultOutputDTO" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64"
        }
      }
    },
    "ErrorDTO" : {
      "type" : "object",
      "properties" : {
        "error" : {
          "type" : "string"
        }
      }
    },
    "OrderOutputDTO" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64"
        },
        "storeId" : {
          "type" : "integer",
          "format" : "int64"
        },
        "address" : {
          "type" : "string"
        },
        "confirmationDate" : {
          "type" : "string"
        },
        "status" : {
          "type" : "string"
        }
      }
    },
    "PaymentInputDTO" : {
      "type" : "object",
      "properties" : {
        "orderId" : {
          "type" : "integer",
          "format" : "int64"
        },
        "status" : {
          "type" : "string",
          "enum" : [ "CANCELED_REVERSAL", "COMPLETED", "CREATED", "DENIED", "EXPIRED", "FAILED", "PENDING", "REFUNDED", "REVERSED", "PROCESSED", "VOIDED" ]
        },
        "creditCardNumber" : {
          "type" : "integer",
          "format" : "int64"
        },
        "paymentDate" : {
          "type" : "string",
          "format" : "date-time"
        }
      }
    },
    "Store" : {
      "type" : "object",
      "properties" : {
        "id" : {
          "type" : "integer",
          "format" : "int64"
        },
        "name" : {
          "type" : "string"
        },
        "address" : {
          "type" : "string"
        }
      }
    },
    "StoreDTO" : {
      "type" : "object",
      "properties" : {
        "name" : {
          "type" : "string"
        },
        "address" : {
          "type" : "string"
        }
      }
    }
  }
}